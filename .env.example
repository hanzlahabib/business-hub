# Business Hub - Email Configuration
# Copy this file to .env and fill in your values

# Server Port
PORT=3002

# Gmail SMTP (if using Gmail)
# Get App Password: Google Account → Security → 2FA → App Passwords
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# SendGrid (if using SendGrid)
# Get API Key: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxx

# Amazon SES (if using AWS)
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Resend (if using Resend)
# Get API Key: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# Custom SMTP (if using custom provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=username
SMTP_PASS=password
SMTP_SECURE=false
